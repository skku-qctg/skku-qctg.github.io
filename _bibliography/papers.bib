@article{lee2024faulttolerant,
  title = {Fault-Tolerant Quantum Computation by Hybrid Qubits with Bosonic Cat Code and Single Photons},
  author = {Lee, Jaehak and Kang, Nuri and Lee, Seok-Hyung and Jeong, Hyunseok and Jiang, Liang and Lee, Seung-Woo},
