@article{lee2025photonic,
      title={Photonic Hybrid Quantum Computing}, 
      author={Jaehak Lee and Srikrishna Omkar and Yong Siah Teo and Seok-Hyung Lee and Hyukjoon Kwon and M. S. Kim and Hyunseok Jeong},
      year={2025},
      month={Dec},
